<resources>
    <style name="AppTheme.MenuItemText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/red</item> <!-- Red text color -->
    </style>
    <style name="ButtonsCustomColor" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTheme">@style/ButtonsCustomColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>